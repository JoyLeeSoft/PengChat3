<Window x:Class="PengChat3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PengChat3" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="355*"/>
            <ColumnDefinition Width="170*"/>
            <ColumnDefinition Width="267*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" Height="469" Margin="1,0,0,0" VerticalAlignment="Top" Width="781" Grid.ColumnSpan="3">
            <TabControl Height="468">
                <TabItem x:Name="tabItem_Main">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Height="auto" Width="auto" Source="Resources/bullet-blue.png"></Image>
                            <TextBlock x:Name="textBlock_tabItemMain" Text="" Margin="2,0,0,0" VerticalAlignment="Center" />
                        </StackPanel>
                    </TabItem.Header>

                    <GroupBox x:Name="groupBox_Login" Width="300" Margin="0,0,475,234">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Height="auto" Width="auto" Source="Resources/groupbox-login.png"></Image>
                                <TextBlock x:Name="textBlock_groupBoxLogin" Text="" Margin="2,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </GroupBox.Header>
                    </GroupBox>
                </TabItem>
            </TabControl>

        </StackPanel>

    </Grid>
</Window>
